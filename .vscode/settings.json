{
    "workbench.startupEditor": "none",
    "workbench.colorTheme": "OM Theme (Default Dracula Italic)",
    "explorer.confirmDelete": false,
    "explorer.compactFolders":false, 
    "explorer.confirmDragAndDrop": false,
    "code-runner.runInTerminal": true,
    "code-runner.clearPreviousOutput": true,
    "git.confirmSync": false,
    "python.analysis.typeCheckingMode": "basic",
    "window.zoomLevel": 1,
    "editor.fontSize": 12,
    "python.languageServer": "Pylance", // ms-python.vscode-pylance
    "python.testing.unittestEnabled": false, // ms-python.python
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": [
      "paycheck"
    ], // -x to bail
    "python.defaultInterpreterPath": "venv/bin/python",
    "[python]": {
      "editor.defaultFormatter": "ms-python.black-formatter", // ms-python.python
      "editor.tabSize": 2,
      "editor.insertSpaces": true,
      "editor.formatOnSave": true,
      "editor.formatOnType": true,
      "editor.codeActionsOnSave": {
      "source.organizeImports": true
      }
      },
    "code-runner.executorMap": {
        "python": " cls ; python -u",
       
    },

"code-runner.ignoreSelection": true,
"workbench.editor.enablePreview": false,
"git.enableSmartCommit": true,
"git.autofetch": true,
"workbench.iconTheme": "vscode-icons",
"liveServer.settings.donotShowInfoMsg": true,
      "[html]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "vscode.html-language-features",
        "editor.quickSuggestions": {
          "other": true,
          "comments": true,
          "strings": true
        }
      },
      "[django-html]": {
        "editor.formatOnSave": false,
        "editor.defaultFormatter": "vscode.html-language-features",
        "editor.quickSuggestions": {
          "other": true,
          "comments": true,
          "strings": true
        }
      },
        "files.associations": {
          "*.js": "javascript",
          "*.jsx": "javascriptreact",
          "*.xml": "html",
          "*.svg": "html",
          "*.html": "html",
          "django-html": "html", // batisteo.vscode-django
          "**/*.html": "html",
          "**/templates/**/*.html": "django-html",
          "**/base_templates/**/*.html": "django-html",
          "**/requirements{/**,*}.{txt,in}": "pip-requirements"
        },
        "emmet.includeLanguages": {
          "django-html": "html", // batisteo.vscode-django
          "javascript": "javascriptreact",
          "typescript": "typescriptreact"
        },
        "python.formatting.provider": "autopep8" 
      }
      
